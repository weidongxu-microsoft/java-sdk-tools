{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol Server in TypeScript",
  "main": "dist/index.js",
  "type": "module",  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "typescript": "^5.8.3",
    "rimraf": "^6.0.1",
    "prettier": "^3.1.0",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
